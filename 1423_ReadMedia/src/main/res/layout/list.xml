<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Black"
    android:orientation="vertical"
    android:paddingTop="2sp">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/colorButtonNormal"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/t1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="@string/t1"
            android:textColor="@color/Black"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/t001"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/t1"
            android:layout_marginStart="13dp"
            android:layout_toEndOf="@+id/t1"
            android:text="@string/t1"
            android:textAlignment="textStart"
            android:textColor="@color/Red"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/t2"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/t1"
            android:layout_marginTop="13dp"
            android:text="@string/t2"
            android:textColor="@color/Navy"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/t002"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/t2"
            android:layout_alignStart="@+id/t001"
            android:text="@string/t2"
            android:textAlignment="textStart"
            android:textColor="@color/Black" />

        <TextView
            android:id="@+id/t3"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/t2"
            android:layout_marginTop="17dp"
            android:text="@string/t3"
            android:textColor="@color/Navy"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/t003"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/t3"
            android:layout_alignBottom="@+id/t3"
            android:layout_alignStart="@+id/t002"
            android:text="@string/t3"
            android:textAlignment="textStart"
            android:textColor="@color/Black" />

        <TextView
            android:id="@+id/t4"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/t3"
            android:layout_marginTop="17dp"
            android:text="@string/t4"
            android:textColor="@color/Navy"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/t004"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/t4"
            android:layout_alignStart="@+id/t003"
            android:text="@string/t4"
            android:textAlignment="textStart"
            android:textColor="@color/Black" />

        <TextView
            android:id="@+id/t5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/t005"
            android:layout_alignBottom="@+id/t005"
            android:layout_alignStart="@+id/t4"
            android:text="@string/t5"
            android:textColor="@color/Navy"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/t005"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/t004"
            android:layout_below="@+id/t004"
            android:layout_marginTop="16dp"
            android:text="@string/t5"
            android:textAlignment="textStart"
            android:textColor="@color/Black" />

    </RelativeLayout>
</LinearLayout>